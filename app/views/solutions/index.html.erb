<div id="solutions">
  <div id="start">
    <h2>Start</h2>
    <%= difficulty_box("tutorial","Tutorial","Get your robotic feet wet and learn the ropes",new_solution_url) %>
    <%= difficulty_box("easy","Easy","Get started and unlock C.A.R.L.'s potential!",new_solution_url,true) %>
    <%= difficulty_box("hard","Hard","Can you handle a REAL programming challenge?",new_solution_url,true) %>
  </div>
  <div id="resume">
    <h2>Resume</h2>
    <% if @solutions.empty? %>
      You haven't started a game yet, why not start one now?
    <% else %>
      <ul>
        <%= @solutions.each do |solution| %>
          <li><%= solution.id %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
